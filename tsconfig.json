{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "skipLibCheck": true,
    "strictNullChecks": false,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": []
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ]
}
